{
  "id": "dropwizard-test-ktn1",
  "cmd": "/home/metskeh/vamp/bin/bootstrap.sh",
  "env": {
    "APP":"dropwizard",
    "JDBC_URL":"jdbc:mysql://lsrv4180.linux.rabobank.nl/dropwizardtest"
  },
  "instances": 1,
  "cpus": 0.05,
  "mem": 128,
  "disk": 10,
  "requirePorts": false,
  "backoffSeconds": 1,
  "backoffFactor": 1.15,
  "maxLaunchDelaySeconds": 15,
  "constraints": [["stage","LIKE","test"],["hostname", "UNIQUE"]],
  "healthChecks": [
    {
      "protocol": "COMMAND",
      "command": { "value": "curl --silent -X GET http://$HOST:8081/healthcheck" },
      "gracePeriodSeconds": 3,
      "intervalSeconds": 10,
      "timeoutSeconds": 4,
      "maxConsecutiveFailures": 3
    }
  ],
  "dependencies": [],
  "upgradeStrategy": {
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 1
  }
}
